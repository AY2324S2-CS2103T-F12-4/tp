<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>

<VBox styleClass="list-container" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
    <GridPane styleClass="list-header" alignment="CENTER">
        <columnConstraints>
            <ColumnConstraints percentWidth="8" fx:id="idColumn"/>
            <ColumnConstraints percentWidth="20" fx:id="EventNameColumn"/>
            <ColumnConstraints percentWidth="20" fx:id="dateColumn"/>
            <ColumnConstraints percentWidth="16" fx:id="eventCategoryColumn"/>
        </columnConstraints>
        <Label text="ID" GridPane.columnIndex="0" alignment="CENTER" GridPane.hgrow="ALWAYS"
               GridPane.halignment="CENTER"/>
        <Label text="NAME" GridPane.columnIndex="1" alignment="CENTER" GridPane.hgrow="ALWAYS"
               GridPane.halignment="CENTER"/>
        <Label text="DATE" GridPane.columnIndex="2" alignment="CENTER" GridPane.hgrow="ALWAYS"
               GridPane.halignment="CENTER"/>
        <Label text="CATEGORY" GridPane.columnIndex="4" alignment="CENTER" GridPane.hgrow="ALWAYS"
               GridPane.halignment="CENTER"/>
    </GridPane>
    <ListView fx:id="eventListView" VBox.vgrow="ALWAYS"/>
</VBox>
