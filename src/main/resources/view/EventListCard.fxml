<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
    <GridPane HBox.hgrow="ALWAYS">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150"/>
        </columnConstraints>
        <GridPane HBox.hgrow="ALWAYS" alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints percentWidth="8" fx:id="idColumn"/>
                <ColumnConstraints percentWidth="20" fx:id="nameColumn"/>
                <ColumnConstraints percentWidth="20" fx:id="dateColumn"/>
                <ColumnConstraints percentWidth="15" fx:id="categoryColumn"/>
            </columnConstraints>
            <Label fx:id="id" styleClass="cell_small_label" GridPane.columnIndex="0" alignment="CENTER"
                   GridPane.hgrow="ALWAYS" GridPane.halignment="CENTER"/>
            <Label fx:id="eventname" styleClass="cell_small_label" text="\$first" GridPane.columnIndex="1" alignment="CENTER"
                   GridPane.hgrow="ALWAYS" GridPane.halignment="CENTER"/>
            <Label fx:id="eventdate" styleClass="cell_small_label" text="\$email" GridPane.columnIndex="2"
                   alignment="CENTER" GridPane.hgrow="ALWAYS" GridPane.halignment="CENTER"/>
            <Label fx:id="eventcategory" styleClass="category-label" text="\$category" GridPane.columnIndex="4"
                   alignment="CENTER" GridPane.hgrow="ALWAYS" GridPane.halignment="CENTER"/>
        </GridPane>
    </GridPane>
</HBox>
